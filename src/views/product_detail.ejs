<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('includes/head.ejs') %>
  
  <script>
    function add(a, b) {
      var nombre = a;
      var reseña = b;

      var p2 = document.createElement('p');
      
      p2.innerHTML = nombre+"<br>"+reseña;

      var p3 = document.getElementById("parent");
      p3.parentNode.insertBefore(p2, p3);
    
      
    }
  </script>

  <link rel="stylesheet" type="text/css" href="/css/details.css">
  <script src="https://kit.fontawesome.com/d71d380a4f.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body>
  <%- include('includes/nav.ejs') %>

  <div class="container-fluid" style="padding: 20px;">
    <div class="row justify-content-center">
      <div class="col-lg-2 text-center">
        <!-- <div class="row mb-1"><img
            src="https://th.bing.com/th/id/OIP.m5yXbfgRZpc5-bZQmP1ZdQHaHa?pid=ImgDet&w=1000&h=1000&rs=1" alt=""></div>
        <div class="row mb-1"><img
            src="https://th.bing.com/th/id/OIP.n6uV-GTCpDmFjd7BaZHqsgHaFj?pid=ImgDet&w=1600&h=1200&rs=1" alt=""></div>
        <div class="row mb-1"><img
            src="https://th.bing.com/th/id/OIP.Q11lKl_IjT5J5blIFavPrgHaFj?pid=ImgDet&w=1024&h=768&rs=1" alt=""></div> -->
      </div>
      <div class="col-lg-4 text-center my-5">
        <div class="image_selected"><img src="<%= product.img %>" class="w-75" alt=""></div>
        <div>
          <div class="row" style="margin-top: 15px;">
            <div class="col-xs-6">
              <button type="button" class="btn btn-primary shop-button"><a href="<%= product.btn %>" class="card-link"><img
                    src="/assets/añadircarro.png" alt=""></a></button>
                    <form action="/book-life/wish-list/<%= product.id %>" method="POST">
                      <button style="background-color: white; border: 1px solid white;" class="card-link"><img src="<%= product.wishList ? '/assets/wish.png' : '/assets/like.png' %>"></button>
                    </form>
              <button type="button" class="btn btn-success shop-button mx-3 ">Comprar Ahora</button>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="product_description">
          <nav>
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/book-life">Inicio</a></li>
              <li class="breadcrumb-item active"><a>Libros</a></li>
            </ol>
          </nav>
          <div class="product_name"><%= product.title %></div>
          <!--Cambiar Rate Stars Css-->
          <div class="stars">
            <br>
            <h5>Calificación de los usuarios:</h5>
            <form action="">
              <input class="star star-5" id="star-5" type="radio" name="star" />
              <label class="star star-5" for="star-5"></label>
              <input class="star star-4" id="star-4" type="radio" name="star" />
              <label class="star star-4" for="star-4"></label>
              <input class="star star-3" id="star-3" type="radio" name="star" />
              <label class="star star-3" for="star-3"></label>
              <input class="star star-2" id="star-2" type="radio" name="star" />
              <label class="star star-2" for="star-2"></label>
              <input class="star star-1" id="star-1" type="radio" name="star" />
              <label class="star star-1" for="star-1"></label>
              
            </form>
          </div>

          <div> <span class="product_price">$ <%= product.price %></span></div>
          <div> <span class="product_dispon">Disponibilidad:</span> <span style='color:black'> <%= product.disponibilidad %><span> </div>
          <div> <span class="product_info"><%= product.desc1 %><span><br>
                <p></p>

                <span class="product_info"><%= product.isbn %><span><br>
                    <span class="product_info"><%= product.noUnidades %><span> </div><div class="singleline">
            <div> <span class="product_info"><%= product.desc2 %><span><br>
                  <div class="singleline">
                  </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row cont mx-3 my-5" style="
  border: 1px solid #25b6c0;">
  <p class="product_name text-center">Reseñas</p>
      <div>
        <label for="a">Nombre:</label>
        <input class="form-control" type="text" name="a" id="a"><br>
        <label for="b">Reseña:</label>
        <input class="form-control" type="text" name="b" id="b"><br>
        <button class="my-3 btn text-blanco btn-info" onclick="add(document.getElementById('a').value,document.getElementById('b').value)">Agregar Reseña</button>
      </div>
  <div class="reseña col-2 mx-3">
    <div id="parent">
    </div>
  </div>
</div>

    <div class="container my-3">
      <div class="bg-ex d-flex text-center justify-items-center text-white">
        <!-- Grid container -->
        <div class="container p-4">
          <!--Grid row-->
          <div class="row my-4">
            <!--Grid column-->
            <div class="justify-content-center mb-4 mb-md-0 ">
              <div
                class="rounded-circle bg-white shadow-1-strong d-flex align-items-center justify-content-center mb-4 mx-auto"
                style="width: 150px; height: 150px;">
                <img src="https://cdn-icons-png.flaticon.com/512/2702/2702069.png" height="70" alt="" loading="lazy" />
              </div>
              <h3 class="text-center">BookLife</h3>
              <h5 class="text-center">Who are we?</h5>
              <p class="text-center">
                We are a bookstore at your fingertips, any book you are looking for, you can find it with us.</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('includes/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
