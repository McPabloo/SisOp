<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('includes/head.ejs') %>

</head>

<body>
  <%- include('includes/nav.ejs') %>

  <div class="">
    <div class="container">
      <div class="row">
        
        <div id="carouselExampleControls" class="carousel slide mt-25 p-5 m-5" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="5000">
              <img src="\assets\1.png" class="d-block w-30 h-100" alt="...">
            </div>
            <div class="carousel-item" data-bs-interval="5000">
              <img src="\assets\2.png" class="d-block w-30 h-100" alt="...">
            </div>
            <div class="carousel-item" data-bs-interval="5000">
              <img src="\assets\3.png" class="d-block w-30 h-100" alt="...">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>

        <div class="btn-group" data-toggle="buttons">
          <a href="/book-life/mayormenor" class="btn btn-primary">Mayor Precio</a>
          <a href="/book-life/menormayor" class="btn btn-primary">Menor Precio</a>
          <a href="/book-life/alfabetico" class="btn btn-primary">Alfabético</a>
        </div>
        
          <div class="col">
            <div class="p-3">
              <div class="row row-cols-1 row-cols-md-3 g-4">
                <% for(const product of products) { %>
                  <div class="col">
                    <div class="card" style="width: 14rem; width: 18rem;">
                      <img src="<%= product.img %>" class="card-img-top" alt="...">
                      <div class="card-body">
                        <h5 class="card-title"><%= product.title %></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= product.subtitle %></h6>
                        <p class="card-text">$<%= product.price %></p>
                        <div>
                          <form action="/book-life/wish-list/<%= product.id %>" method="POST">
                            <button style="background-color: white; border: 1px solid white;" class="card-link"><img src="<%= product.wishList ? '/assets/wish.png' : '/assets/like.png' %>"></button>
                          </form>
                          <a href="/book-life/<%= product.id %>" class="card-link d-flex justify-content-end"><img src="/assets/more.png" alt=""></a>
                        </div>
                      </div>
                    </div>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        
      
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.js" data-cfasync="false"></script>
<script>
window.cookieconsent.initialise({
  "palette": {
    "popup": {
      "background": "#000000",
      "text": "#aaccee"
    },
    "button": {
      "background": "#4b81e8",
      "text": "#000000"
    }
  },
  "content": {
    "message": "Este webside utiliza coockies para garantizar una mejor experiencia de usuario.",
    "dismiss": "Acepto!",
    "link": "Leer más..."
  }
});
</script>

  <%- include('includes/footer.ejs') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"></script>
</body>

</html>